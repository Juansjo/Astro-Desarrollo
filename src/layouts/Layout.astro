---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="p-0 m-0 bg-[#ebebeb]">
    <header class="h-20 bg-[#ffe600] pt-3 columns-3">
      <div class="top-header container">
        <img class="w-32"
          src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.82/mercadolibre/logo_large_25years_v2.png"
        />
        
        <input class="inline items-center boder-none border-0 rounded-none box-border h-11 py-2.5 px-2 w-[80%] rounded-l-sm outline-none " placeholder="Buscar productos, marcas y mas..." />
          <button class=" inline items-center boder-none border-0 rounded-none box-border w-8 bg-[#fff] h-11 rounded-r-sm">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
              ></path>
            </svg>
          </button>
          <img class="w-72" src="https://http2.mlstatic.com/D_NQ_873803-MLA78739315606_092024-OO.webp">
          <div class="group relative inline-block">
            <a href="#" class="bg-green-400">publicidad</a>
            <div class="w-32 pt-3 top-8 group-hover:block hidden bg-red-500 absolute">
              <div class="absolute rotate-45 -top-2 left-2 bg-red-500 size-4"></div>
              opcion 1
            </div>
          </div>
        </div>
    </header>
</div>
    <div class="to-60% from-[#ffe600] to-[#ebebeb] h-72 bg-gradient-to-b"></div>
    <div
      class="container max-w-[1200px] m-auto flex columns-6 -mt-20 h-60 gap-[10px]"
    >
      <div class="grow bg-[#fff] rounded-md">1</div>
      <div class="grow bg-[#fff] rounded-md">2</div>
      <div class="grow bg-[#fff] rounded-md">3</div>
      <div class="grow bg-[#fff] rounded-md">4</div>
      <div class="grow bg-[#fff] rounded-md">5</div>
      <div class="grow bg-[#fff] rounded-md">6</div>
    </div>
    <div
      class="group transition-colors duration-150 hover:bg-blue-700 hover:cursor-pointer rounded inline-flex items-center px-4 py-2 text-white bg-blue-500"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4 mr-1 mt-1 group-hover:animate-spin"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"
        ></path>
      </svg>
      Presioname!

      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4 mt-[4px]"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
      </svg>
    </div>
  </body>
</html>
